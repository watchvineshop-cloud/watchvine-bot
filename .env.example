# ============================================================================
# WatchVine Bot - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# MongoDB Configuration (REQUIRED)
# ----------------------------------------------------------------------------
# Atlas MongoDB for products with vector search
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=watchvine-products
MONGODB_ATLAS_DB=watchvine_refined

# Local MongoDB for conversations (optional if using Atlas for everything)
MONGODB_URI=mongodb://admin:password@your-mongodb-host:27017/?authSource=admin
MONGODB_DB=watchvine_refined

# ----------------------------------------------------------------------------
# Store/Website Configuration (REQUIRED)
# ----------------------------------------------------------------------------
STORE_WEBSITE_URL=https://watchvine01.cartpe.in/
STORE_CONTACT_NUMBER=+91 90162 20667

# ----------------------------------------------------------------------------
# Google Gemini AI (REQUIRED)
# ----------------------------------------------------------------------------
Google_api=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
google_model=gemini-2.0-flash-exp

# ----------------------------------------------------------------------------
# Evolution API - WhatsApp (REQUIRED)
# ----------------------------------------------------------------------------
EVOLUTION_API_URL=http://your-evolution-api-server:8080
EVOLUTION_API_KEY=your_evolution_api_key_here
INSTANCE_NAME=shop-bot

# ----------------------------------------------------------------------------
# Google Apps Script - Order Storage (OPTIONAL)
# If not set, orders will be saved to MongoDB instead
# ----------------------------------------------------------------------------
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/xxxxx/exec
GOOGLE_APPS_SCRIPT_SECRET=your_secret_key

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
PORT=5000
